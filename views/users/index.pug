extends ../layouts/common

block content
	.d-flex
		form(action="/users/reset", class="form-search-box" ,method="GET")
			button.btn.btn-secondary Reset
		button.btn.btn-danger.btn-clear(onclick="clearAll();") Clear
	//- div.hidden(id="oldNumbers")
	table.table.mt-3
		each row in table
			tr
				each num in row
					td.border.text-center.width-num
						label= num
						input(type="checkbox", id=num).switch-users




	script. 

		function clearAll(){
			for( var i = 1; i < 91; i++){
				if(document.getElementById(i)){
					document.getElementById(i).checked = false;
				}
			}
		}

